<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#17233A"
    android:paddingBottom="5dp" >
    
    <RelativeLayout 
        android:id="@+id/homework_title_rl"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true">
        <Button 
            android:id="@+id/cancel_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cancle_btn"
            android:textColor="#FFFFFF"
            android:text="取消"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"/>
       <TextView 
            android:id="@+id/homework_tv"   
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="作业"
            android:textSize="15sp"
            android:layout_centerInParent="true"/>

      <Button
          android:id="@+id/ok_btn"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:background="@drawable/ok_btn"
          android:text="确认"
          android:textColor="#FFFFFF"
          android:textSize="15sp" 
          android:layout_marginRight="5dp"
          android:layout_alignTop="@id/cancel_btn"
          />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homework_title_rl"
        android:background="#F3F4F9"
        android:layout_centerHorizontal="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView 
            android:id="@+id/homework_subject_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="数学"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingTop="5dp"
            />
        
        <TextView 
                android:id="@+id/line_three"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:layout_below="@id/homework_subject_tv"/>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_three"
            android:background="#FFFFFF"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true">

            <TextView 
                android:id="@+id/homework_descr_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="作业描述"
                android:textColor="#B7B7B7"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"/>
            
            <TextView 
                android:id="@+id/line_one"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:layout_below="@id/homework_descr_tv"/>
            
            <TextView 
                android:id="@+id/homework_deadtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_one"
                android:text="到期日：2013-9-7"

                />
            <TextView 
                android:id="@+id/line_two"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:layout_below="@id/homework_deadtime_tv"/>
                        
            <TextView 
                android:id="@+id/homework_pority_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_two"
                android:text="优先级：高"
                android:layout_alignLeft="@id/homework_deadtime_tv"
                />
        </RelativeLayout>
    </RelativeLayout>
    

</RelativeLayout>
